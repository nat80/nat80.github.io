<?xml version="1.0" ?>
<addons>
    <addon id="repository.kodex" version="1.1.3" name="Kodex Repository" provider-name="nat80">
        <extension point="xbmc.addon.repository" name="Kodex Repository">
            <dir>
                <info compressed="false">https://nat80.github.io/addons.xml</info>
                <checksum>https://nat80.github.io/addons.xml.md5</checksum>
                <datadir zip="true">https://nat80.github.io/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Kodex Repository</summary>
            <description>Repository for Kodex Kodi addon</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>icon.png</fanart>
            </assets>
        </extension>
    </addon>
    <addon id="plugin.video.kodex" version="1.1.23" name="Kodex" provider-name="nat80">
        <requires>
            <import addon="xbmc.python" version="3.0.1"/>
            <import addon="script.module.requests" version="2.31.0"/>
            <import addon="plugin.video.themoviedb.helper" version="6.10.8"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="main.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Kodex</summary>
            <description lang="en_GB">Addon powered by Kodex API designed to work with TMDB Helper as the player</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>icon.png</fanart>
            </assets>
        </extension>
    </addon>
</addons>